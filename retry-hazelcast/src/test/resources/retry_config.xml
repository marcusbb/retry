<?xml version="1.0" encoding="UTF-8"?>
<retry>
	<provider>ies.retry.spi.hazelcast.HazelcastRetryImpl</provider>
	<!-- persistence config -->
	<persistenceConfig>
		<ON>true</ON>
		<jpaPU>retryPool</jpaPU>
		<loadFetchSize>500</loadFetchSize>
	</persistenceConfig>
	
	<!-- health check config -->
	<healthCheckConfig>
		<enabled>true</enabled>
		<checkInterval>30</checkInterval>
		<timeUnit>SECONDS</timeUnit>
	</healthCheckConfig>
	<pickLocalCallback>true</pickLocalCallback>
	
	<typeConfig>
		<type>POKE</type>
		<listBacked>true</listBacked>
		<queueStrategy>UNORDERED</queueStrategy>
		<backOff>
			<interval>5000</interval>
			<intervalMultiplier>1.0</intervalMultiplier>
			<maxAttempts>3</maxAttempts>
		</backOff>
		<batchConfig>
			<batchHeartBeat>5050</batchHeartBeat>
			<batchSize>5</batchSize>
			<minBatchSize>1</minBatchSize>
			<intervalMultiplier>1</intervalMultiplier>
		</batchConfig>
		
	</typeConfig>
		<typeConfig>
		<archiveExpired>true</archiveExpired>
		<type>ARCHIVE_ON</type>
		<listBacked>true</listBacked>
		<queueStrategy>UNORDERED</queueStrategy>
		<backOff>
			<interval>5000</interval>
			<intervalMultiplier>1.0</intervalMultiplier>
			<maxAttempts>1000</maxAttempts>
			<maxAttempts>1</maxAttempts>
		</backOff>
		<batchConfig>
			<batchHeartBeat>5050</batchHeartBeat>
			<batchSize>1000</batchSize>
			<intervalMultiplier>1</intervalMultiplier>
		</batchConfig>
		<exceptionLevel>5</exceptionLevel>
		<stackTraceLinesCount>3</stackTraceLinesCount>
	</typeConfig>
	<typeConfig>
		<archiveExpired>false</archiveExpired>
		<type>ARCHIVE_OFF</type>
		<listBacked>true</listBacked>
		<queueStrategy>UNORDERED</queueStrategy>
		<backOff>
			<interval>5000</interval>
			<intervalMultiplier>1.0</intervalMultiplier>
			<maxAttempts>2</maxAttempts>
		</backOff>
		<batchConfig>
			<batchHeartBeat>5050</batchHeartBeat>
			<batchSize>1000</batchSize>
			<intervalMultiplier>1</intervalMultiplier>
		</batchConfig>
		<exceptionLevel>-3</exceptionLevel>
		<stackTraceLinesCount>-7</stackTraceLinesCount>
	</typeConfig>
	
</retry>
